<?xml version="1.0"?>
<mugl>
  <window margin="2" border="2" padding="5"/>
  
  <legend border="2" opacity="1" />
  
  <horizontalaxis id="xaxis"
                  min="0"
                  max="10">
  </horizontalaxis>
  
  <verticalaxis id="yaxis"
                min="0"
                max="10">
  </verticalaxis>

  <plot>
    <legend label="Circle"/>
    <horizontalaxis ref="xaxis"/>
    <verticalaxis ref="yaxis">
      <variable ref="yvar" />
    </verticalaxis>
    <renderer type="point">
      <option name="shape" value="circle"/>
      <option name="linecolor" value="black"/>
      <option name="color"  value="blue"/>
      <option name="size"   value="4"/>
      <option name="fillopacity" value=".5"/>
      <option name="linethickness" value="2"/>
    </renderer>
  </plot>
  
  <plot>
    <legend label="Square"/>
    <horizontalaxis ref="xaxis"/>
    <verticalaxis ref="yaxis">
      <variable ref="zvar" />
    </verticalaxis>
    <renderer type="point">
      <option name="shape" value="square"/>
      <option name="linecolor" value="black"/>
      <option name="color"  value="green"/>
      <option name="size"   value="4"/>
      <option name="fillopacity" value=".5"/>
      <option name="linethickness" value="2"/>
    </renderer>
  </plot>
  
  <!-- This plot will not contribute to the legend -->
  <plot>
    <horizontalaxis ref="xaxis"/>
    <verticalaxis ref="yaxis">
      <variable ref="tvar"/>
    </verticalaxis>
    <renderer type="point">
      <option name="shape" value="diamond"/>
      <option name="linecolor" value="black"/>
      <option name="color"  value="red"/>
      <option name="size"   value="4"/>
      <option name="fillopacity" value=".5"/>
      <option name="linethickness" value="2"/>
    </renderer>
  </plot>

  <plot>
    <horizontalaxis ref="xaxis"/>
    <verticalaxis ref="yaxis">
      <variable ref="dvar"/>
    </verticalaxis>
    <renderer type="point">
      <option name="shape" value="star"/>
      <option name="linecolor" value="black"/>
      <option name="linethickness" value="2"/>
      <option name="color"  value="violet"/>
      <option name="size"   value="3"/>
      <option name="fillopacity" value=".5"/>
    </renderer>
  </plot>

  <data>
    <variables>
      <variable id="xvar" column="0" type="number"/>
      <variable id="yvar" column="1"/>
      <variable id="zvar" column="2"/>
      <variable id="tvar" column="3"/>
      <variable id="dvar" column="4"/>
    </variables>
    <values>
      0, 3, 4, 5, 6
      1, 2, 3, 4, 5
      2, 4, 5, 6, 7
      3, 5, 6, 7, 8
      4, 3, 4, 5, 6
      5, 6, 7, 8, 9
      6, 7, 8, 9, 10
      7, 8, 9, 10, 11
      8, 5, 6, 7, 8
      9, 4, 5, 6, 7
      10,5, 6, 7, 8
    </values>
  </data>
</mugl>
