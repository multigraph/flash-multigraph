<mugl>
  <horizontalaxis id="xaxis" min="-70" max="0">
    <title>Time (Millions of Years)</title>
    <labels>
      <label format="%1d"  spacing="100 50 20 10 5 2 1"/>
      <label format="%.1f" spacing="0.5 0.2 0.1"/>
      <label format="%.2f" spacing="0.05 0.02 0.01"/>
      <label format="%.3f" spacing="0.005 0.002 0.001"/>
    </labels>
    <pan min="-100" max="50"/>
    <zoom min="0.01"/>
  </horizontalaxis>
  <verticalaxis id="yaxis" min="-1" max="5">
    <labels format="%.1f" spacing="5 2 1 0.5 0.2 0.1 0.05 0.02 0.01"/>
    <title angle="90">O^16</title>
  </verticalaxis>
  <plot>
    <legend label="circle"/>
    <horizontalaxis ref="xaxis"/>
    <verticalaxis ref="yaxis">
      <variable ref="yvar" />
    </verticalaxis>
    <filter type="consecutivedistance">
      <option name="distance" value="10"/>
      <option name="visible" value="false"/>
    </filter>
    <renderer type="point">
      <option name="pointshape" value="+"/>
      <option name="pointoutlinecolor" value="black"/>
      <option name="linewidth" value="0"/>
      <option name="pointcolor"  value="black"/>
      <option name="pointsize"   value="2"/>
    </renderer>
  </plot>
<data>
<variables>
  <variable id="xvar" column="0"/>
  <variable id="yvar" column="1"/>
</variables>
<csv location="paleo.csv"/>
</data>
</mugl>
