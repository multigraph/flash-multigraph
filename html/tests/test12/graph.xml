<mugl>
  <legend base="0 1" anchor="0 1" position="0 -25" border="0" rows="1" frame="padding">
    <icon width="15" height="15" border="0"/>
  </legend>
  <window margin="2" border="2" padding="5" />
  <plotarea marginleft="50" marginright="180" marginbottom="80" margintop="75"/>
  <title position="0 5">24 Hour ASOS Data</title>
 <horizontalaxis type="datetime" id="Date/Time" min="2010050100" max="2010050600">
   <title angle="0" position="0 -50" anchor="0 1">Date/Time</title>
   <labels spacing="1Y 6M 3M 2M 1M 7D 2D 1D 12H 6H 2H 1H" format="%Y%L%n%d%L%h:00"/>
   <grid/>
 </horizontalaxis>
 <verticalaxis id="tempf" type="number" positionbase="left">
   <labels format="%.2f"  spacing="50 20 10 5 2 1 0.5 0.2 0.1 0.05 0.02 0.01"/>
   <title angle="90" position="-30 0" anchor="0 -1">Degrees (F)</title>
   <binding id="tempbinding" min="30" max="90"/>
 </verticalaxis>
 <plot>
   <verticalaxis ref="tempf">
     <variable ref="ftemp"/>
   </verticalaxis>
   <horizontalaxis ref="xaxis">
     <variable ref="ftime"/>
   </horizontalaxis>
 <legend label="Forecast Temperature"/>
 <renderer type="pointline">
   <option name="linecolor" value="0xCC0000"/>
   <option name="linewidth" value="2"/>
   <option name="pointshape" value="circle"/>
   <option name="pointsize" value="2"/>
 </renderer>
 </plot> 
  <data>
    <variables>
      <variable id="ftime" column="0" type="datetime"/>
      <variable id="ftemp" column="1"/>
    </variables>
    <service location="http://services.multigraph.org/ndfd/?lonlat=-82.5,35.5&var=temp&q="/>
  </data>
</mugl>

